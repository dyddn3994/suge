<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Suge_store" parent="Theme.Suge_store.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/light_light_grey</item>

        <!-- background -->
        <item name="backgroundColor">@color/light_light_grey</item>
    </style>
    <style name="Theme.Suge_store.NoActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item> <!-- 상태바에 표시되는 글자의 색을 지정 -->
<!--        <item name="android:windowDrawsSystemBarBackgrounds">true</item>--> <!-- 상태바 아래에 다른 뷰가 표시될 수 있도록 함 -->
<!--        <item name="android:windowTranslucentStatus">true</item>--> <!-- 상태바 배경 색을 지정 -->
    </style>
</resources>
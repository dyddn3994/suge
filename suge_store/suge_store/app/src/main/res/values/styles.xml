<resources>
    <style name="DefaultBtn" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/gmarket_sans_ttf</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">
            @drawable/common_google_signin_btn_icon_dark
        </item>
    </style>

    <!-- TextInputLayout -->
    <style name="DefaultTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/border_color_state_list</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="errorIconDrawable">@null</item>
    </style>
    <style name="PasswordTextInputLayout" parent="DefaultTextInputLayout">
        <item name="passwordToggleEnabled">true</item>
    </style>
</resources>
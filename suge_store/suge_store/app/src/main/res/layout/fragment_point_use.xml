<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".src.point.PointUseFragment">

    <TextView
        android:id="@+id/tv_store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="텐동코마츠"
        android:fontFamily="@font/gmarket_sans_ttf"
        android:textStyle="bold"
        android:textSize="32sp"
        android:layout_marginTop="56dp"
        android:layout_marginStart="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_qr_scan"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_border_radius"
        android:layout_marginStart="80dp"
        android:paddingVertical="24dp"
        android:paddingHorizontal="12dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/iv_qr_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_qr_code_scanner_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_qr_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QR 적립"
            android:fontFamily="@font/gmarket_sans_ttf"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_qr_scan" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_point_use"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_border_radius"
        android:layout_marginEnd="80dp"
        android:paddingVertical="24dp"
        android:paddingHorizontal="12dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/iv_point_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_payment_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_point_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쿠폰 사용"
            android:fontFamily="@font/gmarket_sans_ttf"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_point_use" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
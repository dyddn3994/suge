<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".src.point.PointCountFragment">

    <TextView
        android:id="@+id/tv_point_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="적립할 개수를 입력해 주세요"
        android:fontFamily="@font/gmarket_sans_ttf"
        android:textSize="24sp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:fontFamily="@font/gmarket_sans_ttf"
        android:textSize="80sp"
        android:layout_marginTop="96dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_point_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:fontFamily="@font/gmarket_sans_ttf"
        android:textSize="60sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_plus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:fontFamily="@font/gmarket_sans_ttf"
        android:textSize="80sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_count_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="확인"
        android:theme="@style/DefaultBtn"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="60dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_minus" />

</androidx.constraintlayout.widget.ConstraintLayout>